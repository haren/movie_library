<h1>Listing episode_items</h1>

<table>
  <tr>
    <th>Episode</th>
    <th>Cart</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episode_items.each do |episode_item| %>
  <tr>
    <td><%= episode_item.episode_id %></td>
    <td><%= episode_item.cart_id %></td>
    <td><%= episode_item.quantity %></td>
    <td><%= link_to 'Show', episode_item %></td>
    <td><%= link_to 'Edit', edit_episode_item_path(episode_item) %></td>
    <td><%= link_to 'Destroy', episode_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

